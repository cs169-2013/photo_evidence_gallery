<%= form_for @photo, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :caption, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :caption, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tags, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tags, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :incidentName, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :incidentName, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :operationalPeriod, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :operationalPeriod, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :teamNumber, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :teamNumber, :class => 'text_field' %>
    </div>
  </div>
  <p id="Locator">Set photo's location as your current location (if photo has no metadata)</p>
  <input type="button" value="Locate" id="coorbutton">
  <div class="control-group">
    <%= f.label :Latitude, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :lat, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :Longitude, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :lng, :class => 'text_field' %>
    </div>
  </div>
  <% if !@photo.id %>
    <div class="control-group">
      <%= f.label :image, :class => 'control-label' %>
      <div class="controls">
        <%= f.file_field :image, :class => 'file_field' %>
      </div>
    </div>
  <% end %>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary', :id => 'submit_btn' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
      photos_path, :class => 'btn'%>
    </div>
  <% end %>
